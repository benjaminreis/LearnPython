def ParseChoice(choice) :
    try:
        i = int(choice)
        return i
    except ValueError:
        return -1

def GetOption() :
    nChoice = -1

    while nChoice < 0:

        choice = input("Which sample do you wish to perform?")
        print("you chose: " + choice)

        nChoice = ParseChoice(choice)
        if nChoice > 0:
            break

        print("You chose an invalid option.  Choose wisely :-)")



GetOption()

print("this is the end")